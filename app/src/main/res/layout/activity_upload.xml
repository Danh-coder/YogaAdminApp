<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <Button
            android:id="@+id/btnUploadClasses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Classes"
            android:backgroundTint="@color/gray_300"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp"/> <!-- Added margin -->

        <Button
            android:id="@+id/btnUploadClassTypes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Class Types"
            android:backgroundTint="@color/gray_300"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp"/> <!-- Added margin -->

        <Button
            android:id="@+id/btnUploadTeachers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Teachers"
            android:backgroundTint="@color/gray_300"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp"/> <!-- Added margin -->

        <Button
            android:id="@+id/btnUploadClassInstances"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Class Instances"
            android:backgroundTint="@color/gray_300"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnUploadAllData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload All Data" /> <!-- New button for Upload All -->
    </LinearLayout>

</LinearLayout>